<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <css src="Alexvergara_Minicart::css/minicart_styles.css"/>
    </head>
    <body>
        <container name="customer.data" as="customer_data" htmlTag="div" htmlClass="customer-container">
          <container name="customer.info" as="customer_info" htmlTag="div">
              <block class="Magento\Customer\Block\Account\Dashboard\Info" name="customer.info.data" as="info" template="Alexvergara_Minicart::customer/info.phtml" cacheable="false" />
          </container>

          <container name="customer.address" as="customer_address" htmlTag="div">
              <block class="Magento\Customer\Block\Account\Dashboard\Address" name="customer.address.data" as="address" template="Alexvergara_Minicart::customer/address.phtml" cacheable="false" />
          </container>
        </container>

        <!-- moved elements -->
        <move element="customer.data" destination="minicart.addons" before="-"/>
    </body>
</page>
